@model Marvin.Web.Areas._Related._ThingsB

<div class="d-flex related-header">
    <div class=" related-icon"><i class="@Cache.ThingBIcon"></i></div>
    <div class=" related-text">Things B (@Model!.TotalThingsB)</div>
    <div class=" related-viewall">
        @if (Model.TotalThingsB > 4)
        {
            <a href="/thingsb?AdvancedFilter=True&@Model!.ParentIdName=@Model.ParentId">View All</a>
        }
    </div>

    <div class="ms-auto related-new"><a class="btn btn-sm btn-light" href="/thingsb/edit?@(Model.ParentIdName)Id=@(Model.ParentId)&@(Model.ParentIdName)Name=@(Model.ParentName)"> New </a></div>
</div>

<div class="related-items">
    @if (Model.ThingsB.Count == 0)
    {
        @:No related Thing B items
}
    else
    {
        <div class="row">
            @foreach (var item in Model.ThingsB)
            {
                <div class="col-3">
                    <div class="pb-15"><a class="underline" href="/thingsb/@item.Id?tab=details">@item.Name</a></div>
                    <table class="table-related">
                        <tr>
                            <td class="w-30">Lookup</td>
                            <td class="w-70">@item.Lookup</td>
                        </tr>
                        <tr>
                            <td>Money</td>
                            <td>@item.Money</td>
                        </tr>
                        <tr>
                            <td>Status</td>
                            <td>@item.Status</td>
                        </tr>
                        <tr>
                            <td colspan="2" class="py-15">
                                <a class="btn btn-xs btn-light" href="/thingsb/edit/@item.Id">Edit</a>&nbsp;
                                <a class="btn btn-xs btn-light js-delete" href="/thingsb/delete" data-id="@item.Id"
                                   data-dependencies="@item.TotalThingsA">Delete</a>&nbsp; &nbsp;
                            </td>
                        </tr>
                    </table>
                </div>
            }
        </div>
    }
</div>

