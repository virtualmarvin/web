@model Marvin.Web.Areas._Related._ThingsC

<div class="d-flex related-header">
    <div class=" related-icon"><i class="@Cache.ThingCIcon"></i></div>
    <div class=" related-text">Things C (@Model!.TotalThingsC)</div>
    <div class=" related-viewall">
        @if (Model.TotalThingsC > 4)
        {
            <a href="/thingsc?AdvancedFilter=True&@Model!.ParentIdName=@Model.ParentId">View All</a>
        }
    </div>

    <div class="ms-auto related-new"><a class="btn btn-sm btn-light" href="/thingsc/edit?@(Model.ParentIdName)Id=@(Model.ParentId)&@(Model.ParentIdName)Name=@(Model.ParentName)"> New </a></div>
</div>

<div class="related-items">
    @if (Model.ThingsC.Count == 0)
    {
        @:No related Thing C items
}
    else
    {
        <div class="row">
            @foreach (var item in Model.ThingsC)
            {
                <div class="col-3">
                    <div class="pb-15"><a class="underline" href="/thingsc/@item.Id?tab=details">@item.Name</a></div>
                    <table class="table-related">
                        <tr>
                            <td class="w-30">Money</td>
                            <td class="w-70">@item.Money</td>
                        </tr>
                        <tr>
                            <td>Boolean</td>
                            <td><input type="checkbox" class="disabled" asp-for="@item.Boolean" /></td>
                        </tr>
                        <tr>
                            <td>Status</td>
                            <td>@item.Status</td>
                        </tr>
                        <tr>
                            <td colspan="2" class="py-15">
                                <a class="btn btn-xs btn-light" href="/thingsc/edit/@item.Id">Edit</a>&nbsp;
                                <a class="btn btn-xs btn-light js-delete" href="/thingsc/delete" data-id="@item.Id"
                                   data-dependencies="@item.TotalThingsA">Delete</a>&nbsp; &nbsp;
                            </td>
                        </tr>
                    </table>
                </div>
            }
        </div>
    }
</div>

